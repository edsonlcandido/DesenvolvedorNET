@page 
@model DesenvolvedorNET.Pages.Usuario.IndexModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@Model.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <h1>@Model.Title</h1>
    <table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    @foreach (var usuario in Model.Usuarios)
    {
        <tr>
            <td>@usuario.Id</td>
            <td>@usuario.Nome</td>
            <td>                
                <a href="/usuario/@usuario.Id">Detalhes</a> |
                <a>Editar</a> |
                <a>Excluir</a>
            </td>
        </tr>
    }
    </table>
</body>
</html>