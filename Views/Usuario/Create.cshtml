@using DesenvolvedorNET.ViewModels
@using DesenvolvedorNET.Models
@model UsuarioCreateViewModel
@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = "Usuário - novo";
}
<div class="row">
    <div class="container is-fluid">
        <h1 class="is-size-1">@ViewBag.Title</h1>
        @using (Html.BeginForm("create", "usuario", FormMethod.Post))
        {
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    @Html.LabelFor(m => m.Usuario.Nome, new { @class = "label" })
                </div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            @Html.TextBoxFor(m => m.Usuario.Nome, new { @class = "input" })
                            @Html.ValidationMessageFor(m => m.Usuario.Nome,"",new {@class = "help is-danger"})
                        </div>
                    </div>
                </div>
            </div>
            <div class="field is-horizontal">
                <div class="field-label"></div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <input type="submit" value="Cadastrar" class="button is-primary" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
