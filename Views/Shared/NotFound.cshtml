@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="hero is-fullheight is-danger">
    <div class="hero-body">
        <div>
            <p class="title">
                @ViewBag.ErrorMessage
            </p>
            <p class="subtitle">
                @ViewBag.ExceptionMessage
            </p>
            <p class="subtitle is-link">
                <a asp-action="index" asp-controller="home" class="is-info">Volte para a pagina inicial do site</a>
            </p>
        </div>
    </div>
</section>